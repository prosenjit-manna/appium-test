{
  "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": ["es2019", "dom"],
      "types": ["node", "webdriverio/async", "jest", "chai"],
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}